@import '~variables'
html,
body
	color: $fontCLR

.toolbar-btns
	margin-left: 10px

.sidebar
	width 300px
	background-color: $secondBG
	color: $fontSCD

.sidebar .text-primary 
	color: $fontSCD !important

.sidebar .q-item-letter,
.sidebar .q-item-icon
	font-size:24px;

.sidebar .q-list-link > .q-item:hover
	background-color: $secondBGHVR

.sidebar .logo
	padding: 10px
	padding-top: 15px
	padding-left: 20px
	height: 50px
	text-align: left
	border-radius: 0
	font-weight: 500
	background-color: $primary
	color: $fontINV

.sidebar .sidebar-list	
	-webkit-box-shadow: inset 0px 5px 5px -5px rgba(0,0,0,0.5)
	-moz-box-shadow: inset 0px 5px 5px -5px rgba(0,0,0,0.5)
	box-shadow: inset 0px 5px 5px -5px rgba(0,0,0,0.5)

.q-layout-page	
	-webkit-box-shadow: inset 0px 5px 5px -5px rgba(0,0,0,0.5)	
	-moz-box-shadow: inset 0px 5px 5px -5px rgba(0,0,0,0.5)
	box-shadow: inset 0px 5px 5px -5px rgba(0,0,0,0.5)
	background-color: $thirdBG

.q-btn .q-icon, 
.q-btn .q-spinner
	font-size 1em

.q-toolbar
	padding-left 15px
	padding-right 15px

.row-input
	margin-bottom 10px

/* PAGE BAR */
	.page-bar
		position: relative
		background-color:#fff
		width: 100%
		height: 50px
		padding: 0
	.page-bar div.blocks
		height: 50px
		padding: 13px 10px 
		border-left: 1px solid #CCCCCC 
		border-right: 1px solid #CCCCCC
	.page-bar div.blocks:first-child
		border-left: 0
	.page-bar div.blocks:last-child
		border-right: 0
	.page-bar div.blocks div
		height: auto
		padding-top: 0
		padding-left: 0 
		padding-right: 0
		border-left: 0 
		border-right: 0
	.page-bar .title
		position: relative
		display: inline-block
		width: auto;
		max-width: 150px
		margin: 0 
		font-weight : 500
		font-size : 18px
		border: 0 !important
	.page-bar .title .q-icon
		display: inline-block
		font-size: 24px
		margin-right : 5px
	.page-bar .tools
		display: inline-block
		width: auto;
		padding: 0
		margin: 0
		float:right 
	.page-bar .tools .q-btn
		padding: 18px 15px 18px 15px
		border-left: 1px solid #CCCCCC 
		border-right: 0
		font-size: 12px 
	.page-bar .tools .q-btn .q-icon
		font-size: 14px
	.page-bar .tools .q-btn:last-child
		border-right: 0 
